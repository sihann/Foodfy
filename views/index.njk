{% extends "layout.njk" %}


    {% block style %}
        <link rel="stylesheet" href="/css/index.css">
    {% endblock %}
 
    
    {% block main %}

        <section class="banner">
            <div class="banner-info">
                <h1>As melhores receitas</h1>
                <p>Aprenda a construir os melhores pratos 
                com receitas criadas por profissionais
                do mundo inteiro</p>
            </div>
            <div class="banner-img">   
                <img src="/assets/chef.png" alt="Chef Foodfy">        
            </div>            
        </section>
        
        <main>
            <div class="most-tittle">
                <h2>Mais acessadas</h2>
            </div>    
   
            <div class="recipes">

                {% for recipe in recipes %}
                    {% if loop.index0 < 6 %}   
                        <div class="recipes-cards" id="{{recipes.indexOf(recipe)}}">
                            <div class="card-img">
                                <img src="{{recipe.image}}" alt="{{recipe.title}}">
                            </div>
                            <div class="card-info">
                                <h3>{{recipe.title}}</h3>
                                <p>por {{recipe.author}}</p>
                            </div>
                        </div>
                    {% endif %}       
                {% endfor %}

            </div>

        </main>

        <script src="/scripts/script.js"></script>

    {% endblock %}    
    